                <tr>
                    <th class="table-header">Nom</th>
                    <td class="table-data">{{ client.nom }}</td>
                </tr>
                <tr>
                    <th class="table-header">Prénom</th>
                    <td class="table-data">{{ client.prenom }}</td>
                </tr>
                <tr>
                    <th class="table-header">Adresse</th>
                    <td class="table-data">{{ client.adresse }}</td>
                </tr>
                <tr>
                    <th class="table-header">CIN</th>
                    <td class="table-data">{{ client.cin }}</td>
                </tr>

                
            </tbody>
        </table>

        
    </div>



