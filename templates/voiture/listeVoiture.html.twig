<h1 class="table-title">Liste des voitures</h1>

<a href="{{ path('addVoiture') }}" class="add-link">Ajouter voiture</a>
<div class="table-container">

    <table class="styled-table">
        <thead>
            <tr>
                <th>ID</th>
